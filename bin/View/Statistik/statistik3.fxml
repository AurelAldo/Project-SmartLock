<AnchorPane maxHeight="600.0" maxWidth="277.0" prefHeight="600.0" prefWidth="277.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Class.StatControl.PlatformDetailController">
    <children>
        <Pane layoutX="0.0" layoutY="0.0" prefHeight="95.0" prefWidth="277.0" style="-fx-background-color: #5865F2; -fx-background-radius: 0 0 15 15;">
            <children>
                <Label fx:id="headerLabel" layoutX="111.0" layoutY="48.0" text="Statistik" textFill="WHITE">
                    <font>
                        <Font name="Nirmala UI" size="16.0" />
                    </font>
                </Label>
            </children>
        </Pane>
        <Button fx:id="btnFilter" layoutX="31.0" layoutY="105.0" onAction="#handleFilter" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 5 10 5 10;" text="Filter">
            <graphic>
                <ImageView fitHeight="21.0" fitWidth="24.0">
                    <image>
                        <Image url="@../../AsetSB/pilter.png" />
                    </image>
                </ImageView>
            </graphic>
            <font>
                <Font name="Nirmala UI" size="12.0" />
            </font>
        </Button>

        <!-- Platform Usage Card -->
        <Pane layoutX="14.0" layoutY="150.0" prefHeight="80.0" prefWidth="250.0" style="-fx-background-color: #E0E0E0; -fx-background-radius: 15;">
            <children>
                <Label layoutX="85.0" layoutY="15.0" text="rata2 mingguan" textFill="#666666">
                    <font>
                        <Font name="Nirmala UI" size="11.0" />
                    </font>
                </Label>
                <Label fx:id="averageLabel" layoutX="85.0" layoutY="35.0" text=":3 jam 24 menit" textFill="#333333">
                    <font>
                        <Font name="Nirmala UI" size="12.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- Chart Title -->
        <Label layoutX="14.0" layoutY="250.0" text="Penggunaan mingguan" textFill="#333333">
            <font>
                <Font name="Nirmala UI" size="14.0" />
            </font>
        </Label>

        <!-- Charts -->
        <BarChart fx:id="barChart" layoutX="7.0" layoutY="280.0" legendVisible="false" prefHeight="310.0" prefWidth="264.0">
            <xAxis>
                <CategoryAxis label="aplikasi" side="BOTTOM" style="-fx-tick-label-font-size: 10;" tickLabelFill="#666666" />
            </xAxis>
            <yAxis>
                <NumberAxis label="jam" prefHeight="248.0" prefWidth="50.0" side="LEFT" style="-fx-tick-label-font-size: 10;" tickLabelFill="#666666" />
            </yAxis>
        </BarChart>

        <PieChart fx:id="pieChart" layoutX="0.0" layoutY="280.0" legendVisible="false" prefHeight="300.0" prefWidth="277.0" visible="false" />
      <Button layoutX="1.0" layoutY="17.0" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: transparent;" text="back" textFill="WHITE">
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="32.0">
               <image>
                  <Image url="@../../AsetSB/icons8-back-50%20(1).png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
    </children>
</AnchorPane>
